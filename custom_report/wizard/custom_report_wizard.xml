<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_report_wizard_view" model="ir.ui.view">
        <field name="model">custom.report.wizard</field>
        <field name="arch" type="xml">
            <form>

                <group>
                    <group>
                        <field name="report_detail" string="Report Detail" widget="radio"/>
                        <field name="invoice_initial_date" string="Invoice Initial Date"/>
                        <field name="invoice_final_date" string="Invoice Final Date"/>
                    </group>
                    <group>
                        <field name="report_type" string="Report Type" widget="radio"/>
                        <field name="payment_initial_date" string="Payment Initial Date" attrs="{'invisible': [('report_type','!=','only_paid_invoices')]}"/>
                        <field name="payment_final_date" string="Payment Final Date" attrs="{'invisible': [('report_type','!=','only_paid_invoices')]}"/>
                    </group>
                </group>

                <footer>
                    <button name="print_xlsx" string="Print XLSX" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>

            </form>
        </field>
    </record>

    <record id="custom_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Monthly Report</field>
        <field name="res_model">custom.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="custom_report_wizard_view"/>
        <field name="target">new</field>
    </record>

</odoo>
