<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="payment_policy_inherit">
        <field name="name">payment_policy_inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_mx_edi_payment_policy']" position="replace">
                <field name="custom_l10n_mx_edi_payment_policy"
                        attrs="{'invisible': [('l10n_mx_edi_cfdi_request', '=', False)],'readonly': [('state', '!=', 'draft')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
